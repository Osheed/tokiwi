@model Agp___Agile_Project.Models.UserModel
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<head>
    <style type="text/css">
        .error {
            color: red;
        }
    </style>
</head>


@using (Html.BeginForm("Connect", "User", FormMethod.Post)) 
{   @Html.ValidationSummary(true)
    <div class="wrapper" style="width:250px;margin:auto">
        <form class="form-signin" >
            <h2 class="form-signin-heading">@ViewData["Message"]</h2>
            <div>
                <input type="text" class="form-control" name="email" placeholder=@Html.DisplayNameFor(model => model.Email) autofocus="" /> 
                <label>@Html.ValidationMessageFor(model => model.Email, "", new { @class = "error" }) </label>
             </div>
            <div>
                <input type="password" class="form-control" name="password" placeholder=@Html.DisplayNameFor(model => model.Password) />
                <label>@Html.ValidationMessageFor(model => model.Password, "", new { @class = "error" }) </label>
            </div>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Login</button>
        </form>
        
        
    </div>


} 

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/excludechar.js")
}


  


    